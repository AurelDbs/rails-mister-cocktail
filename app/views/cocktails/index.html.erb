<p id="notice"><%= notice %></p>

<h1>Cocktails</h1>

<% @cocktails.each do |cocktail| %>

  <div class="card"
    style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
           url('<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fill %>')">
    <div class="card-category"><%= cocktail.name %></div>
    <div class="card-description">
      <p>Cocktail</p>
    </div>
    <a class="card-link" href="#" ></a>
  </div>

  <%= link_to 'Show', cocktail %> |
  <%= link_to 'Edit', edit_cocktail_path(cocktail) %> |
  <%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %>

<% end %>

<%= link_to 'Add a new Cocktail', new_cocktail_path %>
