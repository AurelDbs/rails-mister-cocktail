<h1>Your cocktail</h1>

<h2><%= @cocktail.name %></h2>

<h3>Ingredients:</h3>

<% @cocktail.doses.each do |dose| %>
  <p>
    <%= dose.description %>
    <%= dose.ingredient.name %>
    <%= link_to 'Destroy', dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
    <%= link_to 'Edit', edit_dose_path(dose) %>
  </p>
<% end %>

<hr>

<%= link_to 'Add ingredients', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
<%= link_to 'Edit Cocktail name', edit_cocktail_path(@cocktail), class: "btn btn-primary" %>
<%= link_to 'Back to Cocktail list', cocktails_path, class: "btn btn-primary" %>
<hr>



